<h1><%= @service.title %></h1><br>

<ul>
    <h3><%= @service.user[:name] %> (<%= link_to "@"+@service.user[:username], @service.user %>)</h3><br>
    <h3>Description </h3>
    <p><%= @service.description %></p><br>
    <h3>Buyer Requirements </h3>
    <p><%= @service.requirements %></p>
</ul><br>

<ul>
    <h3>Reviews (<%= @service.reviews.count %>)</h3>
    <% if @service.reviews.present? %>
        <% @service.reviews.each do |review| %>
            <h3 type='rating'><%= "★" * review.rating %><%= "☆" * (5 - review.rating) %> (<%= link_to "@"+review.user[:username], review.user %>)</h3>
            <li><%= review.content %></li><br>
        <% end %>
    <% else %>
        <p>No Reviews</p>
    <% end %>
</ul>
    
<% if can? :update, @service %>
    <%= link_to 'Edit Service', edit_service_path %>
    <%= button_to 'Delete', service_path, method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>